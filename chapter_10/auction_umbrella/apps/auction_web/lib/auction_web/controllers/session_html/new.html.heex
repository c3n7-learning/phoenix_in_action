<h1>Log In</h1>

<.form :let={f} for={@conn} action={~p"/login"} as={:user}>
  <div class="flex flex-col space-y-2">
    <.input field={f[:username]} label="Username" />
    <.input field={f[:password]} value="" label="Password" type="password" />
  </div>
  <.button type="submit" class="mt-2">Submit</.button>
</.form>
